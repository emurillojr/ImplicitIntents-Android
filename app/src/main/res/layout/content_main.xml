<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:id="@+id/contactsBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="53dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="68dp"
        android:text="People Contact" />

    <Button
        android:id="@+id/geoBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/contactsBTN"
        android:layout_alignStart="@+id/contactsBTN"
        android:layout_below="@+id/contactsBTN"
        android:layout_marginTop="68dp"
        android:text="GeoLocation" />

    <Button
        android:id="@+id/imgBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/geoBTN"
        android:layout_alignStart="@+id/geoBTN"
        android:layout_below="@+id/geoBTN"
        android:layout_marginTop="72dp"
        android:text="Image Capture" />
</RelativeLayout>